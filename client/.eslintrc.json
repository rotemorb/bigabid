{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:vue/essential"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "space-before-function-paren": "off",
    "brace-style": [2, "allman"],
    "space-before-blocks": "off",
    "camelcase": "off",
    "quotes": "off",
    "semi": [2, "always"]
  }
}
